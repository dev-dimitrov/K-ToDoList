<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ControllerToDo">
   <children>
      <ListView fx:id="taskList" editable="true" focusTraversable="false" layoutX="24.0" layoutY="48.0" prefHeight="262.0" prefWidth="200.0" />
      <TextField fx:id="inputTask" layoutX="24.0" layoutY="322.0" onAction="#getInputTask" prefHeight="26.0" prefWidth="200.0" promptText="Write here your task" />
      <Label layoutX="24.0" layoutY="16.0" prefHeight="32.0" prefWidth="142.0" text="K-ToDoList">
         <font>
            <Font size="22.0" />
         </font>
      </Label>
      <Label fx:id="titleLabel" layoutX="233.0" layoutY="48.0" prefHeight="47.0" prefWidth="358.0" text="SelectedTask">
         <font>
            <Font name="System Bold" size="26.0" />
         </font>
      </Label>
      <Label fx:id="creationLabel" layoutX="233.0" layoutY="86.0" prefHeight="18.0" prefWidth="125.0" text="Created on: " />
      <TextArea fx:id="descTextArea" layoutX="233.0" layoutY="104.0" prefHeight="200.0" prefWidth="346.0" />
      <Button fx:id="saveButton" layoutX="477.0" layoutY="322.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="101.0" text="Save changes" />
      <Button layoutX="370.0" layoutY="323.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="94.0" text="Mark as done" />
   </children>
</AnchorPane>
